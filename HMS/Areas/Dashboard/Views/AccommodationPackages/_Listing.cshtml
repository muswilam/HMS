@model HMS.Areas.Dashboard.ViewModels.AccommodationPackagesListingModel


@if (Model != null && Model.AccommodationPackages != null && Model.AccommodationPackages.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">No Of Rooms</th>
                <th scope="col">Fee Per Night</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var accommodationPackage in Model.AccommodationPackages)
            {
                <tr>
                    <td> @accommodationPackage.Name</td>
                    <td> @accommodationPackage.NoOfRoom</td>
                    <td> @accommodationPackage.FeePerNight</td>
                    <td>
                        <button data-href="@Url.Action("Action", "AccommodationPackages", new { id = accommodationPackage.Id })" type="button" class="action-btn btn btn-primary" data-toggle="modal" data-target="#actionModal"><i class="fas fa-pen mr-1"></i> Edit</button>
                        <button data-href="@Url.Action("Delete", "AccommodationPackages", new { id = accommodationPackage.Id })" type="button" class="action-btn btn btn-danger" data-toggle="modal" data-target="#actionModal"><i class="fas fa-trash-alt mr-1"></i> Delete</button>
                    </td>
                </tr>

            }

        </tbody>
    </table>

}
else
{
    <div class="alert alert-warning" role="alert">
        Sorry! No records exist.
    </div>
}
