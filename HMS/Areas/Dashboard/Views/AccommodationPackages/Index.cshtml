@model HMS.Areas.Dashboard.ViewModels.AccommodationPackagesListingModel

@{
	ViewBag.Title = "Accommodation Packages";
}

<script src="~/Areas/Dashboard/Scripts/ViewScript.js"></script>

<div class="row">
	<div class="col col-lg-12">
		<h2>Accommodation Packages</h2>
		<hr />
	</div>
</div>

<div class="row mb-3">
	<div class="col col-lg-12">
		<form>
			<div class="input-group">
				<input type="text" name="searchTerm" class="form-control" placeholder="Search." value="@Model.SearchByName">

				@if (Model.AccommodationTypes != null && Model.AccommodationTypes.Count() > 0)
				{
					<select name="accommodationTypeId" class="form-control">
						<option value="0" selected>
							Select type.
						</option>
						 @foreach (var accommodationType in Model.AccommodationTypes)
							{
								<option value="@accommodationType.Id" @(Model.SearchByAccommodationTypeId == accommodationType.Id ? "selected" : string.Empty)>
									@accommodationType.Name
								</option>
							}
					</select>           
				}
			   
				<div class="input-group-append" id="button-addon4">
					<button class="btn btn-outline-primary" type="submit"><i class="fas fa-search mr-1"></i> Search</button>
					<a class="btn btn-outline-secondary" href="@Url.Action("Index","AccommodationPackages")"><i class="fas fa-redo-alt mr-1"></i> Reset</a>
					<button data-href="@Url.Action("Action", "AccommodationPackages")" class="action-btn btn btn-outline-success" type="button" data-toggle="modal" data-target="#actionModal"><i class="fas fa-plus mr-1"></i>Create</button>
				</div>
			</div>
		</form>
	</div>
</div>

<div class="row">
	<div class="col col-lg-12">
		@Html.Partial("_Listing", Model)

	</div>
</div>

<div class="modal fade" id="actionModal" tabindex="-1" role="dialog">
	<div class="modal-dialog" role="document">

	</div>
</div>
