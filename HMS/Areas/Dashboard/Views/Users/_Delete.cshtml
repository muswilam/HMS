@model HMS.Areas.Dashboard.ViewModels.UsersActionModel

@if (Model != null)
{
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title"> Delete Accommodation Package </h5>

            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <form id="actionForm">
                <input type="hidden" name="id" value="@Model.Id" />
            </form>
            <div class="alert alert-danger" role="alert">
                Are you sure ? you wanna delete @Model.UserName
            </div>
            <div class="errorDiv"></div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fas fa-times mr-1"></i>Close</button>
            <button id="deleteBtn" type="button" class="btn btn-danger"> <i class="fas fa-trash-alt mr-1"></i>Delete</button>
        </div>
    </div>
}

<script>    
    $("#deleteBtn").click(function () {
        $.ajax({
            url: '@Url.Action("Delete","Users")',
            type: 'Post',
            data: $("#actionForm").serialize()
        })
        .done(function (result) {
            if (result.success) {
                location.href ='@Url.Action("Index","Users")'
            } else {
                $(".errorDiv").html(result.message);
            }
        });
    });

</script>