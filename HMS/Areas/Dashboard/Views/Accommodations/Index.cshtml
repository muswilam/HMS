@model HMS.Areas.Dashboard.ViewModels.AccommodationsListingModel

@{
    ViewBag.Title = "Accommodations";
}

<script src="~/Areas/Dashboard/Scripts/ViewScript.js"></script>

<div class="row">
    <div class="col col-lg-12">
        <h2>Accommodations</h2>
        <hr />
    </div>
</div>

<div class="row mb-3">
    <div class="col col-lg-12">
        <form>
            <div class="input-group">
                <input type="text" name="searchTerm" class="form-control" placeholder="Search." value="@Model.SearchByName">
                @if (Model.AccommodationPackages != null && Model.AccommodationPackages.Count() > 0)
                {
                    <select class="form-control" name="accommodationPackageId">
                        <option value="0">
                            Select Package.
                        </option>
                        @foreach (var ap in Model.AccommodationPackages)
                        {
                            <option value="@ap.Id" @(Model.SearchByAccommodationPackageId == ap.Id ? "selected" : string.Empty)>
                                @ap.Name
                            </option>
                        }
                    </select>
                }
                <div class="input-group-append" id="button-addon4">
                    <button class="btn btn-outline-primary" type="submit"><i class="fas fa-search mr-1"></i> Search</button>
                    <a class="btn btn-outline-secondary" href="@Url.Action("Index","Accommodations")"><i class="fas fa-redo-alt mr-1"></i> Reset</a>
                    <button data-href="@Url.Action("Action", "Accommodations")" class="action-btn btn btn-outline-success" type="button" data-toggle="modal" data-target="#actionModal"><i class="fas fa-plus mr-1"></i>Create</button>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="row">
    <div class="col col-lg-12">
        @Html.Partial("_Listing", Model)

    </div>
</div>

<div class="modal fade" id="actionModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">

    </div>
</div>