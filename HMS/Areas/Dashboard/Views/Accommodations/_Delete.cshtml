@model HMS.Areas.Dashboard.ViewModels.AccommodationsActionModel

@if (Model != null)
{
    <script src="~/Areas/Dashboard/Scripts/DeleteActionScript.js"></script>

    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title"> Delete Accommodation Package </h5>

            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <form id="actionForm">
                <input type="hidden" name="id" value="@Model.Id" />
            </form>
            <div class="alert alert-danger" role="alert">
                Are you sure ? you wanna delete @Model.Name
            </div>
            <div class="errorDiv"></div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fas fa-times mr-1"></i>Close</button>
            <button data-href="@Url.Action("Delete","Accommodations")" href-target="@Url.Action("Index","Accommodations")" id="deleteActionBtn" type="button" class="btn btn-danger">
                <i class="fas fa-trash-alt mr-1"></i>Delete
            </button>
        </div>
    </div>
}

